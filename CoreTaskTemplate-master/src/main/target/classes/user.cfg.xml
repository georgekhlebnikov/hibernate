<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="jm.task.core.jdbc.model.User" table="users">
        <id name="id" column="id">
            <generator class="native" />
        </id>
        <property name="name" column="name" type="string" length="64" />
        <property name="lastName" column="lastname" type="string" length="64" />
        <property name="age" column="age" type="short" length="3" />
    </class>
</hibernate-mapping>